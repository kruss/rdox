require 'rake/gempackagetask'

GEM_NAME 	= "rdox"
GEM_VERSION = "0.1.0"

spec = Gem::Specification.new do |s|
	s.name = GEM_NAME
	s.version = GEM_VERSION
	s.author = "Kevin russ"
	s.email = "kruss@lear.com"
	s.platform = Gem::Platform::RUBY
	s.summary = "easy create fency docu"
	s.files = FileList["{bin,tests,lib,docs}/**/*"].exclude("rdoc").to_a
	s.require_path = "lib"
	s.has_rdoc = false
	s.extra_rdoc_files = ["README"]
	s.executables = [GEM_NAME]
end
Rake::GemPackageTask.new(spec) {|pkg|}

desc "Update version"
task :version do
    version = "#{GEM_NAME} - #{GEM_VERSION} (#{Time.new.strftime("%Y-%m-%d %H:%M:%S")})"
    puts "=> #{version}"
    file = File.open("lib/rdox/generated/version.rb", "w")
    begin
      file << "$VERSION = \"#{version}\""
    ensure
      file.close
    end
end  
task :gem => :version

desc "Update help"
task :help do
    docu = File.open("README", "r")
    file = File.open("lib/rdox/generated/help.rb", "w")
    begin
      file << "$HELP = <<END_OF_MESSAGE\n#{docu.read}\nEND_OF_MESSAGE"
    ensure
      docu.close
      file.close
    end
end  
task :gem => :help

desc "Install the gem"
task :install => [:gem] do
    call("gem install pkg/#{spec.name}-#{spec.version}.gem")
end

desc "Uninstall the gem"
task :uninstall do
    call("gem uninstall #{spec.name}")
end

desc "build the tutorial"
task :example => [:install] do
    cd "example" do
    	call("rake build")
    end
end

def call(cmd)
    if !system(cmd) then
    	puts "unable to run: "+cmd
    	exit(-1)
    end
end