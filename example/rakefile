require "rdox/rdox"

root = Page.new(
	:author => "Kevin Russ",
	:description => "Rake based document management",
	:name => "rdox Tutorial"
) do 
	self.childs << Page.new(
		:description => "What is rdox",
		:name => "Overview",
		:tags => [:basics]
	)
	self.childs << Page.new(
		:description => "How does rdox work",
		:name => "Concepts",
		:tags => [:advanced]
	) do 
		self.childs << Page.new(
			:name => "Layout"
		)
		self.childs << Page.new(
			:name => "Tasks"
		) do 
			self.childs << Page.new(
				:name => "Info-Task"
			)
			self.childs << Page.new(
				:name => "Clean-Task"
			)
			self.childs << Page.new(
				:name => "Check-Task"
			)
			self.childs << Page.new(
				:name => "Build-Task"
			)
		end
		self.childs << Page.new(
			:name => "Tags"
		)
	end
	self.childs << Page.new(
		:description => "Using the rdox wizard",
		:name => "Example",
		:tags => [:basics]
	)
	self.childs << Page.new(
		:description => "rdox Reference",
		:name => "Reference",
		:tags => [:advanced, :todo]
	) do 
		self.childs << Page.new(
			:name => "Setup"
		)
		self.childs << Page.new(
			:name => "Commands"
		)
	end
end

RDox.new(root, File.dirname(__FILE__))