require "rdox/rdox"

document = Document.new("rDox Tutorial", "Rake based document management", "Kevin Russ")
document.keys[:style] = :plain

overview = Page.new("Overview", "What is rDox")
overview.keys[:content] = :header
overview.tags = [ :reference ]
document.childs << overview

concepts = Page.new("Concepts", "How does rDox work")
concepts.keys[:content] = :body
document.childs << concepts

example = Page.new("Example", "How to create a rDox document")
example.keys[:content] = :body
example.tags = [ :example ]
example.childs << Page.new("Document")
example.childs << Page.new("Content")
example.childs << Page.new("Output") do |page|
	page.tags = [ :todo ]
end
document.childs << example

setup = Page.new("Setup", "Installation details")
setup.keys[:content] = :footer
setup.tags = [ :reference ]
document.childs << setup

reference = Page.new("Reference", "List of commands")
reference.keys[:content] = :footer
reference.tags = [ :reference ]
document.childs << reference

RDox.new(document, File.dirname(__FILE__))

	
