require "rdox/rdox"

document = Document.new("rdox Tutorial", 
	:description => "Rake based document management", 
	:author => "Kevin Russ"
)

document.childs << Page.new("Overview", 
	:description => "What is rdox",
	:tags => [ :basics ]
)

document.childs << Page.new("Concepts", 
	:description => "How does rdox work",
	:tags => [ :advanced ]
) do |page|
	page.childs << Page.new("Layout")
	page.childs << Page.new("Tasks") do |page|
		page.childs << Page.new("Info-Task")
		page.childs << Page.new("Clean-Task")
		page.childs << Page.new("Check-Task")
		page.childs << Page.new("Build-Task")
	end
	page.childs << Page.new("Tags")
end

document.childs << Page.new("Example", 
	:description => "Using the rdox wizard",
	:tags => [ :basics ]
)

document.childs << Page.new("Reference", 
	:description => "rdox Reference",
	:tags => [ :advanced, :todo ]
) do |page|
	page.childs << Page.new("Setup")
	page.childs << Page.new("Commands")
end

RDox.new(document, File.dirname(__FILE__))

	
